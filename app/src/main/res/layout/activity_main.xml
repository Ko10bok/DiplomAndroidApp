<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121111"
    android:backgroundTint="#3F3F3F"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:fillViewport="true">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="3">

            <EditText
                android:id="@+id/editTextText25"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="9dp"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="0sp"
                android:text="[translate:мг, KOH/г]"
                android:textAlignment="viewStart"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="9dp"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="60dp"
                android:fontFamily="serif"
                android:gravity="start|fill|center_vertical"
                android:lineSpacingExtra="8sp"
                android:padding="4dp"
                android:text="[translate:Щелочное число]"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="150dp"
                android:layout_height="47dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="0sp"
                android:text="[translate:Температура вспышки]"
                android:textAlignment="center"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_column="0"
                app:layout_row="3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="99dp"
                android:layout_height="47dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="0sp"
                android:text="[translate:кв.мм/c]"
                android:textAlignment="viewStart"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_column="0"
                app:layout_row="2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="150dp"
                android:layout_height="47dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="0sp"
                android:text="[translate:Вязкость кинематическая]"
                android:textAlignment="center"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="150dp"
                android:layout_height="47dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="0sp"
                android:text="[translate:Испаряемость]"
                android:textAlignment="center"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_column="0"
                app:layout_row="2" />

            <EditText
                android:id="@+id/editTextText23"
                android:layout_width="97dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="9dp"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="99dp"
                android:layout_height="47dp"
                android:layout_marginStart="276dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="0sp"
                android:text="%"
                android:textAlignment="viewStart"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="99dp"
                android:layout_height="47dp"
                android:layout_marginStart="276dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="0sp"
                android:text="[translate:град C]"
                android:textAlignment="viewStart"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextText24"
                android:layout_width="97dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="9dp"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:textColor="#FCF5FD"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>

    <Button
        android:id="@+id/button3"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#FF9800"
        android:bufferType="normal"
        android:text="[translate:Подбор моторного масла]"
        android:textColor="#070607"
        android:textSize="16sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="198dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#FF9800"
        android:text="[translate:Сохранить]"
        android:textColor="#070607"
        android:textSize="16sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="198dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#FF9800"
        android:text="[translate:База данных]"
        android:textColor="#070607"
        android:textSize="16sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="380dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:text="[translate:Ввод характеристик моторного масла]"
        android:textAlignment="center"
        android:textColor="#FCF5FD"
        android:textDirection="anyRtl"
        android:textScaleX="1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#3F3F3F"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconGravity="top"
        app:iconPadding="14dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>